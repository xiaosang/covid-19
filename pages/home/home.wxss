/* pages/home/home.wxss */
.logo {
  width: 60px; 
  height: 60px;
  margin-top: 40px;
}
.body {
  margin-top: 80px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  font-size: 26px;
  color: #222;
}
.line {
  height: 0.5px;
  width: 120px;
  background-color: #ccc;
  margin-top: 25px;
  margin-bottom: 20px;
}
.card {
  background-color: white;
  height: 80px;
  width: 88%;
  border-radius: 5px;
  margin-top: 15px;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}
.photo {
  width: 44px;
  height: 44px;
  margin-left: 15px;
}
.card-right {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.big-title {
  font-size: 16px;
  font-weight: bold;
  color: #222;
}
.description {
  font-size: 12px;
  color: #999;
  margin-top: 2px;
}
