/* pages/doctor/doctor.wxss */
.scan {
  width: 150px;
  height: 150px;
  margin-top: 20px;
}
.big-tip{
  font-size: 20px;
}
.small-tip{
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}
.info-1 {
  margin-top: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 80%;
  border-bottom: 0.5px solid #ccc;
  padding-bottom: 5px;
}
.info-1-1 {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1.5;
  max-height: 50px;
  padding-bottom: 5px;
}
.info-1-2 {
  margin-top: 10px;
  width: 80%;
  border-bottom: 0.5px solid #ccc;
}
.result {
  font-size: 36px;
  font-weight: 800;
}
.button-group {
  display: flex;
  flex-direction: row;
  width: 80%;
  margin-top: 30px;
}
.button-group button {
  flex: 1;
}